<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2" android:id="@+id/textView"
            app:layout_constraintHorizontal_bias="0.479"/>

    <TextView
            android:padding="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:gravity="center"
            android:text="Deep link from Firebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_detail_des_txt"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginStart="80dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:textAllCaps="false"
            android:text="Share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_share_btn" android:layout_marginTop="216dp"
            app:layout_constraintTop_toBottomOf="@+id/view_detail_des_txt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp"/>

    <Button
            android:textAllCaps="false"
            android:text="Generate link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_gen_btn"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/view_detail_des_txt"/>

    <TextView
            android:paddingRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_link_txt" android:layout_marginTop="164dp"
            app:layout_constraintTop_toBottomOf="@+id/view_detail_des_txt"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>